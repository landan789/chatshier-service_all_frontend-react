{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [ "dom", "es6" ],
        "target": "es6",
        "module": "commonjs",
        "checkJs": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "jsx": "react",
        "paths": {
            "*": ["*", "src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules"
    ],
    "include": [
        "src/**/*.js",
        "src/**/*.d.ts"
    ]
}